    <script>
        function abrirCarta() {
            document.getElementById('mensaje-secreto').style.display = 'block';
            // Lanza una r谩faga de corazones al abrir la carta
            for(let i = 0; i < 30; i++) {
                setTimeout(crearCorazon, i * 60);
            }
        }

        function cerrarCarta() {
            document.getElementById('mensaje-secreto').style.display = 'none';
        }

        function crearCorazon() {
            const heart = document.createElement('div');
            heart.classList.add('heart-particle');
            heart.innerHTML = 'わ'; // El emoji de coraz贸n
            heart.style.left = Math.random() * 100 + "vw"; // Posici贸n horizontal aleatoria
            heart.style.top = '-5vh'; // Empieza un poco por encima de la pantalla
            heart.style.fontSize = Math.random() * 20 + 10 + "px"; // Tama帽o aleatorio
            heart.style.animationDuration = Math.random() * 3 + 2 + "s"; // Duraci贸n de animaci贸n aleatoria
            heart.style.opacity = Math.random() * 0.7 + 0.3; // Opacidad aleatoria

            document.body.appendChild(heart);

            // Elimina el coraz贸n despu茅s de que termine la animaci贸n para no sobrecargar el DOM
            setTimeout(() => {
                heart.remove();
            }, 5000);
        }

        // Generar corazones continuamente en el fondo
        setInterval(crearCorazon, 400); // Crea un coraz贸n cada 400ms
    </script>
